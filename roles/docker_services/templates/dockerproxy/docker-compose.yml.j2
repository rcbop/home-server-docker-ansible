services:
  dockerproxy:
    image: ghcr.io/tecnativa/docker-socket-proxy:latest
    container_name: dockerproxy
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
    ports:
      - 127.0.0.1:2375:2375
    environment:
      - CONTAINERS=1
      - POST=0
      - IMAGES=1
    networks:
      - traefik-network
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true

networks:
  traefik-network:
    external: true
