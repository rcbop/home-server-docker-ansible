services:
  nextcloud:
    image: nextcloud:stable
    container_name: nextcloud
    environment:
      REDIS_HOST: redis
      MYSQL_HOST: mariadb:3306
      MYSQL_DATABASE: {{ nextcloud_mysql_database }}
      MYSQL_USER: {{ nextcloud_mysql_user }}
      MYSQL_PASSWORD: {{ nextcloud_mysql_password }}
      PHP_MEMORY_LIMIT: 8G
      PHP_UPLOAD_LIMIT: 8G
    volumes:
      - {{ volume_path }}/data:/var/www/html
    networks:
      - traefik-network
    depends_on:
      - mariadb
      - redis
    restart: unless-stopped
    labels:
      - traefik.enable=true
      - traefik.http.routers.nextcloud.rule=Host(`{{ nextcloud_sub_domain }}.{{ server_domain }}`)
      - traefik.http.routers.nextcloud.entrypoints=websecure
      - traefik.http.services.nextcloud.loadbalancer.server.port=80
      - homepage.group=Files
      - homepage.name=Nextcloud
      - homepage.icon=nextcloud
      - homepage.href={{ url_scheme }}://{{ nextcloud_sub_domain }}.{{ server_domain }}
      - homepage.description=File backup and synchronization
      - homepage.widget.type=nextcloud
      - homepage.widget.url={{ url_scheme }}://{{ nextcloud_sub_domain }}.{{ server_domain }}
      - homepage.widget.username={{ nextcloud_username }}
      - homepage.widget.password={{ nextcloud_password }}
      - homepage.widget.fields=["cpuload", "memoryusage", "freespace", "activeusers", "numfiles", "numshares"]
    security_opt:
      - no-new-privileges:true

  mariadb:
    image: lscr.io/linuxserver/mariadb:latest
    container_name: nextcloud-mariadb
    environment:
      - PUID={{ puid }}
      - PGID={{ pgid }}
      - TZ={{ timezone }}
      - MYSQL_ROOT_PASSWORD={{ nextcloud_mysql_root_password }}
      - MYSQL_DATABASE={{ nextcloud_mysql_database }}
      - MYSQL_USER={{ nextcloud_mysql_user }}
      - MYSQL_PASSWORD={{ nextcloud_mysql_password }}
    networks:
      - traefik-network
    volumes:
      - {{ volume_path }}/mariadb-config:/config
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true

  redis:
    container_name: nextcloud-redis
    image: redis:alpine
    networks:
      - traefik-network
    volumes:
      - {{ volume_path }}/redis-data:/data
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true


networks:
  traefik-network:
    external: true
